%ul
  - @forums.keys.each do |top_level_forum|
    %li.top_level_forum_data
      = link_to top_level_forum.name, top_level_forum
      %ul
        %li.forum_data
          .forum_main_data ###
          .forum_threads_nr # threads
          .forum_replies_nr # replies
          .forum_last_post_data last post
        - @forums[top_level_forum].each do |forum|
          %li.forum_data
            .forum_main_data
              .forum_name= link_to forum.name, forum
              .forum_description!= forum.description
            .forum_threads_nr= forum.threads_nr
            .forum_replies_nr= forum.replies_nr
            .forum_last_post_data
              .forum_last_poster= "by #{forum.last_poster}"
              .forum_last_post_date= "on #{forum.last_post_date}"
              .forum_last_post_time= "at #{forum.last_post_time}"
  -#= render :partial => "forum_data", :collection => @forums.keys, :as => :forum
  -#!= @pager
