=form_for @post, url: url  do |f|
  = if @post.errors.any?
    #error_explanation
      %h2
        = pluralize(@post.errors.count, "error") + "prohibited this post from being saved:"
        %ul
          =@post.errors.full_messages.each do |msg|
            %li= msg
  .field
    =f.label :title
    =f.text_field :title
    =f.label :content
    =f.text_area :content
    -#=f.hidden_field(:post, :title)
    -#=f.hidden_field(:topic, :forum_id)
    -#if @topic and @topic.forum_id
  .actions
    = f.submit
